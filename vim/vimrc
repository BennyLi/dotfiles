" General settings {{{1
nnoremap <SPACE> <Nop>
let mapleader=' '

set number
set cursorline
set nocompatible
filetype plugin on
syntax on

set expandtab
let shiftwidth=2
let tabstop=2
set autoindent

" Folding {{{2
set foldenable
set foldmethod=marker
nnoremap <leader><space> za

" Plugin configuration {{{1

if empty(glob('~/.vim/autoload/plug.vim'))
  silent !curl -fLo ~/.vim/autoload/plug.vim --create-dirs
    \ https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
  autocmd VimEnter * PlugInstall --sync | source $MYVIMRC
endif

call plug#begin('~/.vim/plugged')

Plug 'itchyny/lightline.vim'
Plug 'scrooloose/nerdtree'
Plug 'ctrlpvim/ctrlp.vim'

" Language support
" > Ansible
Plug 'pearofducks/ansible-vim'

" Git integration
Plug 'airblade/vim-gitgutter'

Plug 'vimwiki/vimwiki'
"Plug 'tbabej/taskwiki'

" Colorscheme
Plug 'arcticicestudio/nord-vim'

call plug#end()

" Plugin config for: lightline {{{2
set laststatus=2
let g:lightline={
      \ 'colorscheme': 'nord' }
let g:lightline.active = {
      \ 'left': [ [ 'mode', 'paste' ],
      \           [ 'readonly', 'relativepath', 'modified' ] ],
      \ 'right': [ [ 'lineinfo' ],
      \            [ 'percent' ],
      \            [ 'fileformat', 'fileencoding', 'filetype' ] ] }
let g:lightline.inactive = {
      \ 'left': [ [ 'filename' ] ],
      \ 'right': [ [ 'lineinfo' ],
      \            [ 'percent' ] ] }
let g:lightline.tabline = {
      \ 'left': [ [ 'tabs' ] ],
      \ 'right': [ [ 'close' ] ] }


" Plugin config for: Nerdtree {{{2
map <C-n> :NERDTreeToggle<CR>

" Plugin config for: vimwiki {{{2
let wiki_iteratec = {}
let wiki_iteratec.path = '~/Documents/iteratec/Notes'
let wiki_iteratec.syntax = 'markdown'
let wiki_iteratec.ext = 'md'

let g:vimwiki_list = [wiki_iteratec]
let g:vimwiki_ext2syntax = {'.md': 'markdown'}
let g:vimwiki_folding = 'expr'

"let g:taskwiki_markup_syntax = 'markdown'
"let g:taskwiki_sort_orders = {'T':'<next>'}
"
